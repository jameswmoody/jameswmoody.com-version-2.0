<div class="container">
  <div class="row">
    <h1><%= @article.title %></h1>
    <div class="col-md-12 content">
      <br><br><p><%= @article.text.html_safe %></p>
      <br><br><p><%= @article.created_at.strftime("%b %d, %Y") %></p><br><br>
    </div>
    <div class="col-md-12">
      <br><h2>Comments</h2><br>
        <%= render @article.comments %>
      <h2>Add a comment:</h2><br><br>
        <%= render 'comments/form' %>
        <%= link_to 'Edit', edit_article_path(@article) %> |
        <%= link_to 'Back', articles_path %><br><br><br><br>
    </div>
  </div>
</div>
